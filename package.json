{
  "name": "node-ts-base",
  "author": "Marcelo Nascimento <maugusto.jpm@gmail.com>",
  "description": "Node.Js API application made with Typescript",
  "repository": "github.com/maugusto-jpm/node-ts-base",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon ./server.ts",
    "typeorm": "ts-node -T -r ./scripts/setupEnv.ts ./node_modules/.bin/typeorm",
    "typeorm:test": "ts-node -T -r ./scripts/setupTestEnv.ts ./node_modules/.bin/typeorm",
    "build": "rm -rf ./build && tsc -p tsconfig.build.json && tscpaths -p tsconfig.json -s ./ -o ./build",
    "postbuild": "ts-node ./scripts/copyFiles './src/views' ./build",
    "test": "jest --runInBand",
    "lint": "eslint './**/*.{js,ts,json}'",
    "lint:fix": "eslint --fix './**/*.{js,ts,json}'"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.30"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-validator": "^3.0.0",
    "@types/faker": "^5.1.7",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/pluralize": "^0.0.29",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-json": "^2.1.2",
    "faker": "^5.4.0",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "jest-module-name-mapper": "^0.1.5",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3"
  }
}
